<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="450" minWidth="450"
      fx:id="mainBox">

    <fx:include fx:id="errorSummaryComponent" source="error-summary-component.fxml" />

    <HBox styleClass="autogram-actions">
        <Button fx:id="cancelButton" styleClass="autogram-button,autogram-button--warning"
            text="%error.ignorable.cancel.btn" onAction="#onCancelAction" />
        <Button fx:id="continueButton" styleClass="autogram-link" text="%general.continue.btn"
            onAction="#onContinueAction" />
    </HBox>
</VBox>