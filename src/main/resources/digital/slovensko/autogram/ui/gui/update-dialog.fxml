<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="500" minWidth="450"
      fx:id="mainBox">
    <VBox>
        <TextFlow fx:id="title" styleClass="autogram-heading-m">
            <Text styleClass="autogram-heading-m" text="%update.newVersion.title"/>
        </TextFlow>

        <VBox styleClass="autogram-prose">
            <TextFlow styleClass="autogram-body">
                <Text styleClass="autogram-body" text="%update.newVersion.text"/>
            </TextFlow>
        </VBox>
        <HBox styleClass="autogram-actions">
            <Button fx:id="mainButton" styleClass="autogram-button" text="%update.download.btn" onAction="#downloadAction"/>
            <Button fx:id="cancelButton" styleClass="autogram-link" text="%update.cancel.btn" onAction="#onCancelButtonPressed"/>
        </HBox>
    </VBox>
</VBox>
