<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="200" prefWidth="600"
      fx:id="mainBox">

    <VBox fx:id="formGroup" styleClass="autogram-form-group">
        <TextFlow><Text styleClass="autogram-heading-l" text="%pickKey.select.title"/></TextFlow>
        <TextFlow><Text fx:id="error" styleClass="autogram-error-message" managed="false" text="%pickKey.error.title"/></TextFlow>
        <VBox fx:id="radios" styleClass="autogram-radios"/>
    </VBox>

    <Button styleClass="autogram-button" fx:id="mainButton" text="%general.sign.btn" onAction="#onPickCertificateButtonAction" />
</VBox>
