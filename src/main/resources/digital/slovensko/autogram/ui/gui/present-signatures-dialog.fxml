<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      maxHeight="800"
      prefWidth="768"
      fx:id="mainBox">

    <TextFlow><Text styleClass="autogram-heading-m" text="%signature.present.summary.title"/></TextFlow>

    <ScrollPane>
        <VBox>
            <VBox fx:id="signaturesBox" spacing="10" />
        </VBox>
    </ScrollPane>

    <HBox styleClass="autogram-actions">
        <Button fx:id="closeButton" styleClass="autogram-button, autogram-button--secondary" text="%general.close.btn" onAction="#onCloseButtonAction" />
        <Text fx:id="signatureValidationMessage" styleClass="autogram-body" text="%signature.present.text"/>
        <Button fx:id="signatureDetailsButton" styleClass="autogram-link" text="%signature.present.details.btn" visible="false" onAction="#onSignatureDetailsButtonAction" />
    </HBox>
</VBox>
