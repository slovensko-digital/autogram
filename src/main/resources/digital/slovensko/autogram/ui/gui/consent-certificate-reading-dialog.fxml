<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="600.0"
            fx:id="mainBox">

    <VBox styleClass="autogram-warning-summary">
        <HBox>
            <TextFlow>
                <Text styleClass="autogram-heading-l">Povoliť prečítanie certifikátov?</Text>
            </TextFlow>
        </HBox>
        <TextFlow styleClass="autogram-warning-summary__description"><Text/></TextFlow>
        <TextFlow styleClass="autogram-warning-summary__description">
            <Text>Externá aplikácia sa snaží o prečítanie podpisových certifikátov, ktoré môžu obsahovať osobné údaje.</Text>
        </TextFlow>
        <TextFlow styleClass="autogram-warning-summary__description"><Text/></TextFlow>
    </VBox>

    <HBox styleClass="autogram-actions">
        <Button fx:id="continueButton" styleClass="autogram-button,autogram-button--primary" text="Povoliť" onAction="#onContinueAction" />
        <Button fx:id="cancelButton" styleClass="autogram-button,autogram-button--secondary" text="Zrušiť" onAction="#onCancelAction" />
    </HBox>
</VBox>
