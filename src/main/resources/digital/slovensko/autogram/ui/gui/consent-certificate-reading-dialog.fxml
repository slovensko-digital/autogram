<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="600.0"
      fx:id="mainBox">

    <VBox styleClass="autogram-warning-summary">
        <HBox>
            <TextFlow>
                <Text styleClass="autogram-heading-l" text="%certConsent.summary.title"/>
            </TextFlow>
        </HBox>
        <TextFlow styleClass="autogram-warning-summary__description"><Text/></TextFlow>
        <TextFlow styleClass="autogram-warning-summary__description">
            <Text text="%certConsent.text"/>
        </TextFlow>
        <TextFlow styleClass="autogram-warning-summary__description"><Text/></TextFlow>
    </VBox>

    <HBox styleClass="autogram-actions">
        <Button fx:id="continueButton" styleClass="autogram-button,autogram-button--primary" text="%certConsent.btn" onAction="#onContinueAction" />
        <Button fx:id="cancelButton" styleClass="autogram-button,autogram-button--secondary" text="%general.cancel.btn" onAction="#onCancelAction" />
    </HBox>
</VBox>
